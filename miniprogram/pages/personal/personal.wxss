/* pages/personal/personal.wxss */

/* 普通用户背景 */
.normal-bkg {
    background: linear-gradient(90deg, #F78CA0 0%, #FF6D57 19%, #F58F7F 60%);
}

/* 头像等信息展示框 */
.info-shower {
    display: flex;
    align-items: center;
}

/* 昵称展示框 */
.nickname-shower {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 15px;
    color: white;
    z-index: 100;
}

/* 选项列表布局 */
.list-box {
    width: 100%;
    margin: 0 auto;
    height: 100%;
}

/* 选项列表样式 */
.list-view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: solid 1px #d1d9e6;
    height: min(10%, 50px);
    margin: auto;
    padding: 0 5%;
    background-color: rgba(255, 255, 255, 0.3);
}

.icon-text-box {
    display: flex;
    align-items: center;
    font-weight: normal;
    font-size: medium;
}

.list-view text {
    margin-left: 15px;
}

.onBtnPushed {
    background-color: #ddd;
}

.code-box {
    width: 80%;
    height: 30%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.code-box input {
    margin-top: 25%;
    width: 80%;
    height: 20%;
    border-radius: 12px;
    text-align: center;
}

.bottom-btn {
    width: 100%;
    display: flex;
    position: absolute;
    bottom: 0;
    height: 20%;
}

.bottom-btn button {
    width: 50%;
}

.cancel {
    background-color: #cccccc;
    border-radius: 0;
}

.confirm {
    background-color: #FF6347;
    color: white;
    border-radius: 0;
}

.VIP-box {
    height: 60%;
    width: 100%;
}

.vip-banner {
    width: 100%;
    height: 30%;
    background-color: #303030;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.vip-slogan {
    font-size: 150%;
    background: linear-gradient(90deg, #F6D365 0%, #FDA085 100%);
    line-height: 28.96px;
    -webkit-background-clip: text;
    background-clip:text;
    color: transparent;
}

.recharge-box {
    width: 100%;
    height: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.vip-recharge {
    width: 80%;
    height: 30%;
    border: solid 3px #ff6347;
    border-radius: 8px;
    background: #FF634726;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.time {
    margin-left: 5%;
    font-size: large;
    color: #ff6347;
}

.price {
    color: #333333;
    margin-right: 5%;
}

.cancel-tip {
    width: 80%;
    margin-top: 10%;
}

.strong {
    color: red;
    font-weight: bold;
}