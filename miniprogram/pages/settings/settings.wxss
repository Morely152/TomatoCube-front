/* pages/settings/settings.wxss */

/* 选项列表布局 */
.list-box {
    width: 100%;
    margin: 0 auto;
    height: 100%;
}

/* 选项列表样式 */
.list-view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: solid 1px #d1d9e6;
    border-bottom: solid 1px #d1d9e6;
    width: 100%;
    /* border: solid 1px red; */
    height: min(10%, 50px);
    background-color: rgba(255, 255, 255, 0.3);
}

.icon-text-box {
    display: flex;
    align-items: center;
}

.list-view text {
    margin-left: 5%;
    font-weight: 100;
}

.list-view image {
    margin-right: 5%;
}

.onBtnPushed {
    background-color: #ddd;
}

.list-title {
    display: flex;
    align-items: center;
    justify-content: left;
    height: min(10%, 50px);
    margin: 0 5%;
    width: 100%;
}

.list-title text {
    margin-left: 12px;
    size: 2px;
}