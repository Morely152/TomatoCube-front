<!--pages/personal/personal.wxml-->
<view class="light-main normal-bkg">
    <image src="../../resources/light-icons/tomato-bkg.png" style="width: 100px; height: 100px; rotate: -30deg; margin-top: 50px; position: fixed; z-index: 1; left: 160px;"></image>

    <!-- 头像-昵称展示框 -->
    <view class="info-shower" style="width: 90%; height: 80px; margin: 28px 0;">
        <image src="../../resources/light-icons/default-touxiang.png" style="width: 80px; height: 80px;"></image>
        <view class="nickname-shower">
            <txt style="font-size: 20px; margin-bottom: 15px;">账号未登录</txt>
            <text style="font-size: 13px;">请点击此处登录</text>
        </view>
        <view class="center" style="z-index: 100; width: 85px; height: 30px; background-color: #FFFFFF; position: absolute; right: 0; margin-right: 30px; border-radius: 8px;">
            <text style="font-size: 15px; width: 77px; color: #ff6347; text-align: center;">开通VIP</text>
        </view>
    </view>

    <!-- 选项列表背景 -->
    <view class="center" style="width: 100%; height: 100%; background-color: #ecf0f3; z-index: 100; border-radius: 8px; box-shadow: 3px 0px 8px 2px #FFFFFF;">
        <view class="list-box">
            <!-- 软件设置 -->
            <button class="list-view" hover-class="onBtnPushed" style="margin-top: 5%; border-top: solid 1px #d1d9e6;" bind:tap="goToSettings">
                <view class="icon-text-box">
                    <image style="width: 18px; height: 18px;" src="../../resources/light-icons/mine-view-1.png"></image>
                    <text>软件设置</text>
                </view>
                <image style="width: 16px; height: 18px;" src="../../resources/light-icons/go-right.png"></image>
            </button>

            <!-- 激活码兑换 -->
            <button class="list-view" hover-class="onBtnPushed" bind:tap="showCode">
                <view class="icon-text-box">
                    <image style="width: 18px; height: 18px;" src="../../resources/light-icons/mine-view-2.png"></image>
                    <text>激活码兑换</text>
                </view>
                <image style="width: 16px; height:18px;" src="../../resources/light-icons/go-right.png"></image>
            </button>

            <!-- 开通VIP -->
            <button class="list-view" hover-class="onBtnPushed" bind:tap="showVIP">
                <view class="icon-text-box">
                    <image style="width: 18px; height: 18px;" src="../../resources/light-icons/mine-view-3.png"></image>
                    <text>开通VIP</text>
                </view>
                <image style="width: 16px; height: 18px;" src="../../resources/light-icons/go-right.png"></image>
            </button>

            <!-- 意见反馈 -->
            <button class="list-view" hover-class="onBtnPushed" style="margin-top: 3%;  border-top: solid 1px #d1d9e6;" bind:tap="feedBack">
                <view class="icon-text-box">
                    <image style="width: 18px; height: 18px;" src="../../resources/light-icons/mine-view-4.png"></image>
                    <text>意见反馈</text>
                </view>
                <image style="width: 16px; height: 18px;" src="../../resources/light-icons/go-right.png"></image>
            </button>

            <!-- 关于我们 -->
            <button class="list-view" hover-class="onBtnPushed" bind:tap="goToInfo">
                <view class="icon-text-box">
                    <image style="width: 18px; height: 18px;" src="../../resources/light-icons/mine-view-5.png"></image>
                    <text>关于我们</text>
                </view>
                <image style="width: 16px; height: 18px;" src="../../resources/light-icons/go-right.png"></image>
            </button>

            <!-- 注销账号 -->
            <button class="list-view" hover-class="onBtnPushed" style="margin-top: 3%;  border-top: solid 1px #d1d9e6;" bind:tap="showCancel">
                <view class="icon-text-box">
                    <image style="width: 18px; height: 18px;" src="../../resources/light-icons/mine-view-6.png"></image>
                    <text>注销账号</text>
                </view>
                <image style="width: 16px; height: 18px;" src="../../resources/light-icons/go-right.png"></image>
            </button>

            <!-- 退出登录 -->
            <button class="list-view" hover-class="onBtnPushed" bind:tap="logOut">
                <view class="icon-text-box">
                    <image style="width: 18px; height: 18px;" src="../../resources/light-icons/mine-view-7.png"></image>
                    <text>退出登录</text>
                </view>
                <image style="width: 16px; height: 18px;" src="../../resources/light-icons/go-right.png"></image>
            </button>

        </view>
    </view>

    <!-- 用户协议与隐私条款 -->
    <view style="position: fixed; bottom: 20px; z-index: 100;">
        <text style="color: #2A82E4; text-decoration: underline; font-size: 12px;">用户协议与隐私条款</text>
    </view>

    <!-- 激活码弹层 -->
    <van-popup custom-class="code-box" show="{{ showCode }}" bind:close="closeCode" round>
        <input class="light-in" placeholder="请输入激活码" value="{{inputCode}}" bindinput="onInputCode" />
        <view class="bottom-btn">
            <button class="cancel" bind:tap="closeCode">取消</button>
            <button class="confirm" bind:tap="verifyCode">激活</button>
        </view>
    </van-popup>

    <!-- VIP弹层 -->
    <van-popup position="bottom" custom-class="VIP-box" show="{{ showVIP }}" bind:close="closeVIP" round>
        <view class="vip-banner">
            <text class="vip-slogan">开发不易，感谢您的支持</text>
            <text class="vip-slogan">观看广告解锁高级权益</text>
        </view>

        <view class="recharge-box">
            <view class="vip-recharge" bind:tap="showAd16">
                <text class="time">1天高级权益</text>
                <text class="price">16s广告</text>
            </view>
            <view class="vip-recharge" bind:tap="showAd30">
                <text class="time">5天高级权益</text>
                <text class="price">30s广告</text>
            </view>
        </view>
    </van-popup>

    <van-popup custom-class="code-box" show="{{ showCancel }}" bind:close="closeCancel" round>
        <view class="cancel-tip">
            <text>“注销账号”操作将会使您的账号及用户数据被<text class="strong">彻底删除，并且无法恢复</text>。若要保留数据，选择“退出登录”即可。确定要注销账号吗？</text>
        </view>
        <view class="bottom-btn">
            <button class="cancel" bind:tap="closeCancel">取消</button>
            <button class="confirm" bind:tap="confirmCode" style="background-color: red;">确定</button>
        </view>
    </van-popup>

</view>