/* pages/staticstics/statistics.wxss */
page {
    background-color: #F5F5F5;
    /* 1. 标签栏高度（默认 44px） */
  --tabs-nav-height: 80rpx;          /* 改成 80rpx */

  /* 2. 标签栏字体大小（默认 28rpx） */
  --tabs-nav-font-size: 33rpx;

  /* 3. 内容区高度（仅 card 类型生效） */
  --tabs-card-height: 41rpx;        /* 想整体变矮就改这里 */
}

/* 标题前的橙色小方块样式 */
.block {
    display: flex;
    margin-left: 14px;
    margin-top: 8px;
    width: 10px;
    height: 21px;
    background: #FF6347;
    float: left;
    position: relative;
}

/* 标题文字样式 */
.little-title {
    display: flex;
    margin-left: 5px;
    margin-top: 13.67px;
    height: 22px;
    opacity: 1;
    font-size: 15px;
    letter-spacing: 0rpx;
    font-weight: 500;
    line-height: 21.72rpx;
    color: rgba(0, 0, 0, 1);
    vertical-align: middle;
    float: left;
    position: relative;
}

/* 图表背景框样式 */
.chart {
    width: calc(100% - 30px);   /* 尽量使用相对单位，不要把各个控件的边距、宽高写死，不利于自适应布局 */
    background-color: white;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

/* 专注报表容器 */
.focus-table {
    width: calc(100% - 10px);
    height: calc(100% - 10px);
    margin: auto;
}

/* 专注报表单元格 */
.focus-table view {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 80%;
    background-color: #ECF0F3;
    height: 25px;
}

/* 专注报表表头 */
.focus-table .thead {
    background-color: rgba(255, 99, 71, 0.3);
    font-weight: bolder;
}
.focus-table {
    font-weight: normal;
}

/* ----------专注热力图------------ */
/* 小时刻度：只在 5/11/17/23 显示数字 */
.hour-labels {
  display: grid;
  grid-template-columns: repeat(24, 139rpx); 
  gap: 4rpx; /* 与热力图 grid 的 gap 保持一致，视觉更对齐 */
  justify-content: start; 
  margin-left: 188rpx; /* 空出左侧日期列的宽度，让刻度从网格开始 */
}

.hour {
  width: 50rpx; 
  font-size: 20rpx;
  text-align: center;
  margin-bottom: 1.5rpx;
  color: #cccccc;
}
.hour.show {
  color: #cccccc;
}

/* 主体：左侧日期 + 右侧格子（CSS Grid） */
.body {
  display: grid;
  grid-template-columns: 100rpx 1fr; /* 左侧日期 60rpx，右侧自适应 */
  gap: 0 2rpx;
  align-items: start; 
}

/* 左侧日期竖排 */
.date-col {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.date-text {
  font-size: 20rpx;
  color: #cccccc;
  text-align: right;
  line-height: 36rpx;   /* 与格子高度对齐 */
  padding-right: 10rpx;
}

/* 右侧 24 列格子 */
.grid {
  display: grid;
  grid-template-columns: repeat(24, 20rpx);
  grid-template-rows: repeat(7, 32rpx);
  gap: 4rpx;
}

.cell {
  width: 22rpx;
  height: 30rpx;
  border-radius: 2px;
}

