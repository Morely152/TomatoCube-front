<!--pages/settings/settings.wxml-->
<view class="light-main">

    <!-- 通知设置 -->
    <view class="list-title">
        <text>通知设置</text>
    </view>
    <view class="list-view">
        <text>接收消息通知</text>
        <van-switch size="24px" active-color="#FF6347" checked="{{ notice_switch }}" style="margin-right: 5%;" bind:change="onChangeNotice" />
    </view>
    <view class="list-view" bind:tap="onShowTimeSet" hover-class="onBtnPushed">
        <text>设置通知时间</text>

        <image style="width: 16px; height: 18px;" src="../../resources/light-icons/go-right.png"></image>
    </view>
    <van-action-sheet show="{{showTimeSet}}" actions="{{timeList}}" bind:close="closeNoticeTimeSet" bind:select="onSelectTime" cancel-text="取消"/>

    <!-- 账户管理 -->
    <view class="list-title">
        <text>账户管理</text>
    </view>
    <button class="list-view" open-type="chooseAvatar" bindchooseavatar="onChooseAvatar">
        <text>设置头像</text>
        <image src="{{avatarUrl}}" mode="aspectFill" style="width: 30px; height: 30px; border-radius: 50%;"/>
    </button>
    <view class="list-view">
        <text>设置昵称</text>
        <input type="nickname" placeholder="请输入昵称" bindblur="onNickNameInput" style="text-align: right; margin-right: 5%;"/>
    </view>
    <!-- 其他设置 -->
    <view class="list-title">
        <text>其他设置</text>
    </view>
    <view class="list-view" bind:tap="">
        <view style="display: flex; align-items: center;  margin-left: 5%;">
            <text style="margin-right: 5px; margin-left: 0;">跳过广告</text>
            <image src="../../resources/light-icons/vip_icon.png" style="width: 16px; height: 18px; margin-right: 0;"></image>
        </view>
        <van-switch size="24px" active-color="#FF6347" checked="{{ ad_switch }}" style="margin-right: 5%;" bind:change="onChangeAd" />
    </view>
  
</view>